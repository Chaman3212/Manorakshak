{
  "manifest_version": 3,
  "name": "ManoRakshak",
  "version": "1.0.0",
  "description": "Protect mental wellbeing by analyzing harmful content across the web.",
  "action": {
    "default_title": "ManoRakshak",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["userDashboard.html", "userDashboard.js", "userDashboard.css","cv2.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
} 